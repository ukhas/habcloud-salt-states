{{ ship_ssl_certificate(ssl.default_certificate) }}
{% set shipped_ssl_certs = [ssl.default_certificate] %}

{% for site in sites.values() %}
{% if site.ssl and site.ssl.certificate not in shipped_ssl_certs %}
{{ ship_ssl_certificate(site.ssl.certificate) }}
{% set shipped_ssl_certs = shipped_ssl_certs + [site.ssl.certificate] %}
{% endif %}
{% endfor %}
{% endif %}

{% endmacro %}
